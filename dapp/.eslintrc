{
    "env": {
		"browser": true,
		"node": true,
        "commonjs": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "guard-for-in": ["error"],
        "no-var": ["error"],
        "no-undef": ["error"],
        "no-trailing-spaces": ["error"],
        "curly": ["error"],
        "no-unused-vars": ["warn"],
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1,
                "MemberExpression": "off"
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}